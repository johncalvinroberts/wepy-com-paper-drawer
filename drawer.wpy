<style lang="css">
@font-face {
    font-family: 'icomoon';
    src: url(data:application/font-woff2;charset=utf-8;base64,) format('woff2'),
        url(data:application/font-woff;charset=utf-8;base64,) format('woff');
    font-weight: normal;
    font-style: normal;
}

.icon-close:before {
  content: "\e900";
  font-family: 'icomoon' !important;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;  
}

.close--default {
  color: #000;
  font-size: 18px;
}

.sideslider--outer{
  width: 100%;
  z-index: 98;
  height:100vh;
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  box-sizing: border-box;
  overflow: hidden;
}
.sideslider--mask{
  height: 100%;
  background-color: rgba(0,0,0, 0.5);
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.sideslider--sheet{
  transition: all 0.3s ease-in-out;
  position: absolute;
  background-color: #fff;
  box-sizing: border-box;
  box-shadow: 10px 10px 30px 0 rgba(0,0,0,0.1);
}
.sideslider--inner{
  position: relative;
  width: 100%;
  z-index: 99;
  height:100%;
}

.icon-close{
  position: absolute;
  background-size:contain;
  padding: 2px;
  z-index:99;
  width: 40rpx;
  height: 40rpx;
}

.sideslider--sheet.left {
  transform: translate3d(-100%, 0, 0);
  left: 0;
  top: 0;
  bottom: 0;
  width:65%;  
}
.sideslider--sheet.left .icon-close {
  bottom:5px;
  right:5px;
}
.sideslider--sheet.left.open {
  transform: translate3d(0%,0,0);
}

.sideslider--sheet.right {
  transform: translate3d(100%, 0, 0);
  right: 0;
  top: 0;
  bottom: 0;
  width:65%;  
}
.sideslider--sheet.right .icon-close {
  bottom:5px;
  left:5px;
}
.sideslider--sheet.right.open {
  transform: translate3d(0%,0,0);
}

.sideslider--sheet.bottom {
  transform: translate3d(0, 110%, 0);
  right: 0;
  bottom: 0;
  width:100%;
  min-height: 55px;
  box-shadow:0 -10px 30px 0 rgba(0,0,0,0.1);
}
.sideslider--sheet.bottom .icon-close {
  top: 5px;
  right: 5px;
}
.sideslider--sheet.bottom.open {
  transform: translate3d(0%,0,0);
}


.sideslider--sheet.full {
  transform: translate3d(0, -110%, 0);
  right: 0;
  bottom: 0;
  width:100%;
  height: 100vh;
  box-shadow:0 -10px 30px 0 rgba(0,0,0,0.1);
}
.sideslider--sheet.full .icon-close {
  top: 5px;
  right: 5px;
}
.sideslider--sheet.full.open {
  transform: translate3d(0%,0,0);
}

</style>
<template>
  <view class="sideslider--outer" style="visibility: {{open ? 'visible' : 'hidden'}};" @tap="handleTapSheet">
    <view class="sideslider--mask" id="sheetmask"></view>
    <view class="sideslider--sheet {{mode}} {{open ? 'open' : ''}}">
      <view class="sideslider--inner">
        <view class="icon-close {{closeClass}}" @tap="handleTapBtn" id="icon-close" hidden="{{!displayClose}}"/>
        <slot></slot>
      </view>
    </view>
  </view>
</template>
<script>
  import wepy from 'wepy'
  export default class SideSlider extends wepy.component {
    props = {
      open: {
        type: Boolean,
        default: false
      },
      mode: {
        type: String,
        default: 'left'
      },
      displayClose: {
        type: Boolean,
        default: true
      },
      closeClass: {
        type: String,
        default: 'close--default'
      }
    }
  
    methods = {
      handleTapSheet (e) {
        const isTarget = e.target.id === 'sheetmask'
        if (isTarget) {
          this.open = !this.open
          this.$apply()
        }
      },
      handleTapBtn (e) {
        this.open = !this.open
        this.$apply()
      },
      toggle () {
        this.open = !this.open
        this.$apply()
      }
    }
  }
</script>
